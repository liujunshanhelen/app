<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3"
        tools:context=".sign_up1">
    <ImageButton
            android:id="@+id/return_before"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/return_before"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintVertical_bias="0.07"/>
<!--    <ImageButton-->
<!--            android:id="@+id/origin_photo"-->
<!--            android:layout_width="130dp"-->
<!--            android:layout_height="130dp"-->
<!--            android:src="@drawable/abc"-->
<!--            android:background="@android:color/transparent"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.50"-->
<!--            app:layout_constraintVertical_bias="0.15"/>-->
    <Button
            android:layout_width="85dp"
            android:layout_height="38dp"
            android:layout_margin="@dimen/dp20"
            android:id="@+id/choose"
            android:text="选择头像"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintVertical_bias="0.28"
            tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_margin="@dimen/dp20"
            android:id="@+id/origin_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/abc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintVertical_bias="0.12"
            tools:ignore="MissingClass"/>
    <EditText
            android:id="@+id/secret_input"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="密码"
            android:textSize="16sp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.699"
            app:layout_constraintVertical_bias="0.594"/>

    <EditText
            android:id="@+id/name_input"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="请输入姓名"
            android:textSize="16sp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.699"
            app:layout_constraintVertical_bias="0.355"/>

    <EditText
            android:id="@+id/phone_input"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="联系方式"
            android:textSize="16sp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.699"
            app:layout_constraintVertical_bias="0.515"/>

    <EditText
            android:id="@+id/id_input"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="身份证号"
            android:textSize="16sp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.699"
            app:layout_constraintVertical_bias="0.435"/>

    <ImageView
            android:id="@+id/id_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/id_text"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.437"/>

    <ImageView
            android:id="@+id/name_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/name_text"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.357"/>

    <ImageView
            android:id="@+id/secret"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_secret1"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.597"/>

    <ImageView
            android:id="@+id/phone_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone_text"
            android:background="@android:color/transparent"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintVertical_bias="0.517"/>

    <Button
            android:id="@+id/save_basic"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:text="下一步"
            android:background="@drawable/edit_background"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.85"/>

    <CheckBox
            android:text="管理员权限"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/limit"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.75"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>